#!/bin/bash
set -beEu -o pipefail
bindir=$(dirname $0)

if [[ $# != 2 ]] ; then
    echo "wrong # args: $0 isoforms_bed outprefix" >&2
    exit 1
fi
isoforms_bed="$1" ; shift
outprefix="$1" ; shift

mkdir -p $(dirname ${outprefix})
python3 ${bindir}/evaluate_transcriptome_0226.py \
        --gtf data/gencode.v38.annotation.chr22.gtf \
        --bed_reads data/WTC11.ENCFF370NFS.chr22.genomealigned.bed \
        --isoforms ${isoforms_bed} -o ${outprefix}.eval


